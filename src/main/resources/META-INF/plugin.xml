<idea-plugin>
    <id>com.github.drjacky.avocado</id>
    <name>Avocado</name>
    <vendor>drjacky</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.drjacky.avocado.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.drjacky.avocado.services.MyProjectService"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
<!--        <project-component service="com.github.drjacky.avocado.MyProjectComponent" />-->
    </extensions>

    <actions>
        <action id="MyRightClickAction"
                class="MyRightClickAction"
                text="My Right Click Action"
                description="Perform some action on right-click">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
