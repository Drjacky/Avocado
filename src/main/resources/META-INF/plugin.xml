<idea-plugin>
    <id>com.github.drjacky.avocado</id>
    <name>Avocado</name>
    <vendor>drjacky</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.drjacky.avocado.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.drjacky.avocado.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.drjacky.avocado.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <group id="MyPlugin.TopMenu"
               text="_MyPlugin"
               description="MyPlugin Toolbar Menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="MyAction"
                    class="com.github.drjacky.avocado.actions.MyAction"
                    text="_MyAction"
                    description="MyAction"/>
        </group>
        <action id="com.github.drjacky.avocado.RightClickAction"
                class="com.github.drjacky.avocado.actions.RightClickAction"
                text="RightClickAction"
                description="Right Click in the file">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>
